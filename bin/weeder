#!/usr/bin/env ruby

# Run this script from inside the ./bin directory

weeded = File.open('../skip_words/wikipedia.data', 'w')

def keep? word
  word.strip =~ /^[a-zA-Z][a-z0-9]{3,}$/
end

File.open('../enwiki-latest-all-titles-in-ns0','r') do |f|
  while line = f.gets
    weeded.write(line.strip.downcase + "\n") if !(line.nil?) && keep?(line)
  end
end

weeded.close